<div class="row"    style="background-color:rgb(21, 32, 43);">
  <% if logged_in? %>
    <% provide(:title, 'Home') %>


    <div class="col-md-3"   style="background-color:rgb(21, 32, 43);" >
    <div class=" d-flex flex-column pt-4 " style="padding: 0px 63px " style="background-color:rgb(21, 32, 43);">
<div style="padding: 14px 0px"    style="background-color:rgb(21, 32, 43);">
        <%= link_to users_path do %>
          <%= icon("users") %>
          <span>Users</span>
        <% end %>

</div>

      <div style="padding: 14px 0px">
        <%= link_to current_user do %>
          <%= icon("user") %>
          <span>Profile</span>
        <% end %>
      </div>

      <div style="padding: 14px 0px">
        <%= link_to tweets_path do %>
          <%= icon("comment") %>
          <span>Tweets</span>
        <% end %>
      </div>

      <div style="padding: 14px 0px">
        <%= link_to edit_user_path(current_user) do %>
          <%= icon("cog") %>
          <span>Setting</span>
        <% end %>
      </div>

      <div style="padding: 14px 5px ;margin: 0px -2px">
        <%= link_to logout_path, method: "delete" do %>
          <%= icon("sign-out") %>
          <span>Log out</span>
        <% end %>
      </div>

      <div style="padding: 14px 5px ;color: #337ab7;margin: 0px -2px">
        <%= icon("info") %>
        <%= link_to "Help", help_path,{:style=>'margin-left:5px'} %>
      </div>



      <div style="padding: 14px 5px ;color: #337ab7 ; margin: 0px -2px " >
        <%= icon("question")%>
        <%= link_to "About", about_path ,{:style=>'margin-left:5px'}%>
      </div>

      <div style="padding: 14px 5px ;color: #337ab7; margin: 0px -2px">
        <%= icon("address-book") %>
        <%= link_to "Contact", contact_path,{:style=>'margin-left:5px'} %>
      </div>



    </div>
    </div>

    <div class="col-md-6"  style="background-color:rgb(21, 32, 43);" >
      <div class="timeline"    style="background-color:rgb(21, 32, 43);">
        <%= render 'shared/tweet_form' %>
        <h2 class="title">Tweets</h2>
        <% if @tweets.any? %>
        <ol class="tweets">
          <%= render @tweets %>
          <div class="paginate">
            <%= will_paginate @tweets, renderer: BootstrapPagination::Rails %>
          </div>
        </ol>
        <% end %>
      </div>
    </div>

    <aside class="col-md-3"    style="background-color:rgb(21, 32, 43);">
      <section    style="background-color:rgb(21, 32, 43);">
        <%= render 'shared/user_info' if logged_in? %>
      </section>
    </aside>

  <% else %>

    <% provide(:title, "Log in") %>

    <div class="row" style="background-color:rgb(21, 32, 43);">
      <div class="col-md-6 col-md-offset-3 one-col" style="background-color:rgb(21, 32, 43);">
        <h1>Log in to Twitter Clone</h1>

        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'control-label'%>
            <%= f.text_field :email, class: 'form-control', autofocus: true  %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'control-label' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="checkbox">
            <%= f.label :remember_me, class: 'control-label' do %>
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            <% end %>
          </div>
          <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
        <% end %>

        <p>New user? <%= link_to "Sign up", signup_path %></p>
      </div>
    </div>


<% end %>


</div>
